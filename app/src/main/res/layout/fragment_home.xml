<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/space_24dp"
        android:layout_marginEnd="@dimen/space_24dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_test"
            android:layout_width="wrap_content"
            app:cardCornerRadius="@dimen/space_15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_test"
                android:layout_width="135dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:alpha="4"
                android:background="@color/hidecolor"
                android:layout_height="150dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/add_img"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_add_circle_outline_red_24"
                    android:padding="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <TextView
                    android:id="@+id/tv_test"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/space_18sp"
                    android:textColor="@color/light_black"
                    android:layout_below="@id/add_img"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content"
                    android:text="New Lead"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_wallet"
            android:layout_width="wrap_content"
            app:cardCornerRadius="@dimen/space_15dp"
            android:layout_marginStart="32dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_wallet"
                android:layout_width="135dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:alpha="4"
                android:background="@color/hidecolor"
                android:layout_height="150dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/wallet_imge"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_account_balance_wallet_red_24dp"
                    android:padding="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <TextView
                    android:id="@+id/tv_wallet"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/space_18sp"
                    android:textColor="@color/light_black"
                    android:layout_below="@id/wallet_imge"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content"
                    android:text="Wallet"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>