<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_shadow_bg">

        <RelativeLayout
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10dp"
                android:drawableLeft="@drawable/ic_baseline_person_black_24dp"
                android:drawablePadding="@dimen/space_5"
                android:fontFamily="@font/montserrat_medium"
                android:text="Mohan Sharma"
                android:textColor="@color/black"
                android:textSize="@dimen/space_16sp" />

            <ImageView
                android:id="@+id/menu_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_more_vert_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/space_10"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: Jhansi | Tehsil:  Mauranipur"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14sp"
            android:drawablePadding="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:drawableLeft="@drawable/ic_baseline_location_on_black_24dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="@dimen/space_10dp"/>

        <TextView
            android:id="@+id/mobile_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-89648736334"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14sp"
            android:drawablePadding="@dimen/space_5"
            android:drawableLeft="@drawable/ic_baseline_call_24dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="@dimen/space_10dp"/>


        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category : Tractor auto parts"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14sp"
            android:drawablePadding="@dimen/space_5"
            android:drawableLeft="@drawable/ic_baseline_star_border_black_24dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="@dimen/space_10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_15dp"
            android:layout_marginBottom="@dimen/space_10dp"
            android:layout_marginStart="@dimen/space_10dp">

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:textColor="@color/white"
                android:textSize="@dimen/space_14sp"
                android:background="@drawable/drawable_rectnagle_green_bg"
                android:paddingVertical="5dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/space_15"
                android:fontFamily="@font/montserrat_regular"
                />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 PM 12- JUN- 2021"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14sp"
                android:layout_marginTop="@dimen/space_5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/space_10"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="@dimen/space_10dp"/>
        </RelativeLayout>








    </LinearLayout>

</LinearLayout>