<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ReedemFragment">

    <include
        layout="@layout/custom_tool_bar_second"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/reward_img">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem Reward Points"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/space_16dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_toLeftOf="@id/serial_num"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_reedem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        android:background="@drawable/drawable_shadow_bg"
        android:ems="10"
        android:lineSpacingExtra="@dimen/space_6"
        android:hint="Enter redeem amount"
        android:textColor="@color/black"
        android:paddingVertical="@dimen/space_15"
        android:paddingHorizontal="@dimen/space_10dp"
        android:textColorHint="@color/light_gray"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRedeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        android:backgroundTint="@color/red"
        android:background="@drawable/drawbale_rectangle_white_bg"
        android:fontFamily="@font/montserrat_regular"
        android:text="Redeem"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coins_wallet"/>

</LinearLayout>