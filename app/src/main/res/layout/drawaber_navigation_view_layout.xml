<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/li_profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:background="@color/black"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_weight=".2"
                android:layout_marginLeft="@dimen/space_10dp"
                android:layout_width="@dimen/space_30dp"
                android:layout_height="@dimen/space_30dp"
                android:src="@drawable/men_img"
                app:tint="@color/white" />
            <LinearLayout
                android:id="@+id/li_user_profile"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/space_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/space_16sp"
                    android:text="Harshit Verma"/>
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_14sp"
                    android:text="+91-8090786860"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_weight="1"
                android:layout_width="@dimen/space_30dp"
                android:layout_height="@dimen/space_30dp"
                android:src="@drawable/ic_baseline_settings_white_24dp"
                app:tint="@color/white" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/li_home"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_24dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_dashboard_white_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Dashboard"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_account_balance_wallet_red_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Wallet"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_assignment"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_menu_red_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Categories"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_bookmarks"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_add_circle_outline_red_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Add Leads"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_manage_leads"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_add_circle_outline_red_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Manage Leads"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_add_circle_outline_red_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Payouts"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_notice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_30dp"
                        android:layout_height="@dimen/space_30dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:src="@drawable/ic_baseline_add_circle_outline_red_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Notices"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_marginTop="@dimen/space_15dp"
                        android:textColor="@color/black" />

                </LinearLayout>




            </LinearLayout>
        </ScrollView>





    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/red">

        <TextView
            android:id="@+id/tv_logout"
            android:padding="@dimen/space_8dp"
            android:text="Log out"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:drawablePadding="@dimen/space_10dp"
            android:drawableLeft="@drawable/ic_baseline_lock_open_white_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>